<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_welcome"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.beagle.ui.welcome.fragment.LoginFragment"
        android:label="@string/btn_login">

        <!-- Vai a Registrazione -->
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <!-- Deep link opzionale -->
        <deepLink app:uri="beagle://login" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.beagle.ui.welcome.fragment.RegisterFragment"
        android:label="@string/btn_register">

        <!-- Torna al Login -->
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/fragment_close_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_open_exit" />

        <!-- Deep link opzionale -->
        <deepLink app:uri="beagle://register" />
    </fragment>

</navigation>
